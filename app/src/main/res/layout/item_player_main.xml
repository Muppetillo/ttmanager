<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvPlayerNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/oxanium_semibold"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:src="@drawable/bloodbowl_logo"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/oxanium_semibold"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginVertical="2dp"
                android:layout_weight="3"
                android:layout_marginHorizontal="4dp"
                >

                <TextView
                    android:id="@+id/tvPlayerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxanium_medium"
                    android:textSize="12sp"
                    tools:text="Eagle Warrior Lineman"/>
                <TextView
                    android:id="@+id/tvPlayerPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Lineman"
                    android:fontFamily="@font/oxanium_light"
                    android:textSize="12sp"/>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>