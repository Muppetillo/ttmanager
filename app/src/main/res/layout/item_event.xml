<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvLeague"
    android:layout_width="200dp"
    android:layout_height="160dp"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- IMAGEN-->
        <ImageView
            android:id="@+id/ivEventImg"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src ="@drawable/bblogoicon2018_web"
            android:layout_marginBottom="8dp"/>
        <!-- ZONA INFERIOR -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/tertiary80"
                android:orientation="horizontal">
                <!-- IMAGEN 2-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLeagueInfo"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/ivLeagueImg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bblogoicon2018_web"/>


                </androidx.cardview.widget.CardView>
                <!-- NOMBRE Y LUGAR -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SampleTeam"
                        android:textSize="12dp"
                        android:fontFamily="@font/oxanium_semibold"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvEventPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/dark100"
                        android:fontFamily="@font/oxanium_medium"
                        tools:text="Zaragoza, Spain"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivEventType"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/icn_league" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>