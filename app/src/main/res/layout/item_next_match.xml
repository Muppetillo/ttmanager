<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvNextMatch"
    android:layout_width="250dp"
    android:layout_height="160dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp"
    android:backgroundTint="@color/primary60"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <!-- TEAMS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- TEAM 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <!-- TEAM 1 ICON -->
                <ImageView
                    android:id="@+id/ivIconTeam1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/human" />
                <!-- TEAM 1 NAME -->
                <TextView
                    android:id="@+id/tvNameTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oxanium_bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="SampleTeam" />
                <!-- TEAM 1 FACTION -->
                <TextView
                    android:id="@+id/tvFactionTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oxanium_semibold"
                    android:text="SampleTeam"
                    android:textColor="@color/dark80"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="SampleTeam" />
            </LinearLayout>

            <!-- VS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/oxanium_semibold"
                android:text="@string/vs"
                android:textColor="@color/dark100"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- TEAM 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">
                <!-- TEAM 2 ICON -->
                <ImageView
                    android:id="@+id/ivIconTeam2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dark_elf" />
                <!-- TEAM 2 NAME -->
                <TextView
                    android:id="@+id/tvNameTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oxanium_bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="SampleTeam" />
                <!-- TEAM 2 FACTION -->
                <TextView
                    android:id="@+id/tvFactionTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oxanium_semibold"
                    android:textColor="@color/dark80"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="SampleFaction" />
            </LinearLayout>

        </LinearLayout>
        <!-- MATCH SCHEDULE AND PLACE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <!-- MATCH SCHEDULE -->
            <TextView
                android:id="@+id/tvMatchSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/oxanium_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="09:00 - 12/02/2023" />
            <!-- MATCH PLACE -->
            <TextView
                android:id="@+id/tvMatchPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/oxanium_regular"
                android:textColor="@color/dark80"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="Sample place" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>